<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_4">

    <TextView
        android:id="@+id/text_rating_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="@string/text_breed_child_friendly"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:scaleX=".7"
        android:scaleY=".7"
        android:numStars="5"
        android:transformPivotX="0dp"
        android:progressTint="@color/color_pink_star"
        android:transformPivotY="0dp"
        android:isIndicator="true"
        app:layout_constraintTop_toBottomOf="@+id/text_rating_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_rating_type"/>

</androidx.constraintlayout.widget.ConstraintLayout>


